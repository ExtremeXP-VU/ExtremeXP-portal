{
  "mode": "peer",
  "scouting": {
    "gossip": {
      "enabled": true,
      "multihop": false,
      "autoconnect": {
        "peer": "router|peer"
      }
    }
  },
  "plugins": {
    "storage_manager": {
      "volumes": {
        "fs": {}
      },
      "storages": {
        "fs_projects_replica": {
          "key_expr": "projects/**",
          "strip_prefix": "projects",
          "volume": {
            "id": "fs",
            "dir": "projects_replica"
          }
        }
      }
    },
    "rest": {
      "http_port": 8000
    }
  }
}
